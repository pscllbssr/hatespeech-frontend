.theme-header 
    background clr-primary
    min-height 66vh

    display flex
    justify-content center
    align-items center
    margin-bottom 2em

    position relative
    overflow hidden

    header
        z-index: 2
        text-align center
        color clr-white

        h1
            color clr-white
            font-size 2rem
            text-shadow 3px 3px 10px clr-primary
            text-align center
            margin-bottom: 0


            @media medium
                font-size 3.5rem
            @media large
                font-size 4rem
    
.parallax
    position absolute
    top 0
    background-position center !important
    transform translateY(0px)
    height 66vh
    width 100%
    background-size: cover
    @media medium 
        background-size auto

    opacity 1
    z-index: 1

.bubble-1
    background-image url('../img/bg/bubbles.png')    
.bubble-2
    background-image url('../img/bg/md-bubbles.png')
.bubble-3
    background-image url('../img/bg/background-chars.png')
    
.bubble-4 
    background-image url('../img/bubbles4.png')
    

    