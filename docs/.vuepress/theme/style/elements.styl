form
  width 100%

textarea
  width 100%
  max-width 100%
  border-color clr-black
  display block
  margin-bottom 1em
  padding 1em
  line-height 1.8
  outline none
  transition all 200ms
  border-radius 5px

  &:focus
    box-shadow 5px 5px 5px clr-light inset

.btn
    display inline-block
    color clr-black
    background clr-white
    padding .5em 2em
    border 1px solid clr-black
    border-radius 5px
    box-shadow 1px 1px 1px clr-gray
    cursor pointer
    transition all 200ms
    outline none
    margin-right .5em

    &:active 
      background clr-primary
      color clr-white
      border-color clr-primary
      box-shadow none

    @media (hover:hover) 
      &:hover
          background clr-primary
          color clr-white
          border-color clr-primary
          box-shadow none

button.active-state-fixer
    display block
    height 0
    width 0
    border 0
    visibility hidden
    outline 0
    position absolute

a.btn
  text-decoration: none

.info-box
  padding 1em 2em 
  background clr-light

  p, a
    font-family: 'Source Sans Pro', sans-serif
    text-align: left

.center-box
  text-align center
  margin 3em auto

  p
    text-align: center

@media (hover: none) 
  abbr, abbr[title] 
    text-decoration none