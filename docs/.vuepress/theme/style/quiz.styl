.quiz__comment
    font-family: 'Source Sans Pro', sans-serif
    //border 1px solid clr-primary
    border-radius 5px
    text-align left
    padding .5em 1em
    position relative
    margin-bottom 2em
    background clr-light
    //color clr-white

    &:after 
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        width: 0;
        height: 0;
        border: 1em solid transparent;
        border-top-color: clr-light
        border-bottom: 0;
        //border-left: 0;
        margin-left: -1em;
        margin-bottom: -1em;

